<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="24dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">


        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvEmployer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Name"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvPostingLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place of Posting"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvEmployer"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvRequiredQualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Qualification"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvPostingLocation"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvVacancies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacancies: 0"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvRequiredQualification"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvLastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Date: DD/MM/YYYY"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRequiredQualification"/>

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp. (in years): 0"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvVacancies"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: M / F"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvVacancies"/>

        <TextView
            android:id="@+id/tvMinAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min. Age (in years): 0"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvExperience"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvMaxAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max. Age (in years): 0"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvExperience"/>

        <TextView
            android:id="@+id/tvApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Here: Click Here!"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMinAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPostedBY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by: Name"
            android:textColor="#818181"
            android:textSize="16sp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvApply"
            app:layout_constraintEnd_toStartOf="@id/tvPostingDate"/>

        <TextView
            android:id="@+id/tvPostingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on: DD/MM/YYYY"
            android:textColor="#818181"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvApply"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
